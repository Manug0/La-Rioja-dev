pipeline {
    agent any
    environment {
        SFDX_AUTH_URL = credentials('SFDX_AUTH_URL_PRE')
        SFDX_ALIAS = 'pre'
        SF_CMD = 'C:\\Users\\Manu\\AppData\\Local\\sf\\client\\2.92.7-df40848\\bin\\sf.cmd'
        GITHUB_TOKEN = credentials('github-pat')
    }
    
    stages {
        stage('Inicializar Deploy') {
            steps {
                script {
                    updateGitHubStatus('pending', 'Iniciando deploy a producci√≥n...', 'production-deploy')
                    
                    echo "üöÄ Iniciando pipeline de deploy a producci√≥n"
                    echo "Branch: ${env.BRANCH_NAME}"
                    echo "Commit: ${env.GIT_COMMIT?.take(8)}"
                }
            }
        }
        
        stage('Verificar SFDX') { 
            steps { 
                script {
                    updateGitHubStatus('pending', 'Verificando herramientas...', 'production-deploy')
                    
                    echo "üîß Verificando SFDX CLI..."
                    bat "${SF_CMD} --version"
                    echo "‚úÖ SFDX CLI verificado"
                }
            }
        }
        
        stage('Authenticate') {
            steps {
                script {
                    updateGitHubStatus('pending', 'Autenticando con producci√≥n...', 'production-deploy')
                    
                    echo "üîê Autenticando con org de producci√≥n..."
                    bat 'echo %SFDX_AUTH_URL% > auth_url.txt'
                    bat "${SF_CMD} org login sfdx-url --sfdx-url-file auth_url.txt --alias %SFDX_ALIAS%"
                    echo "‚úÖ Autenticaci√≥n exitosa"
                }
            }
        }
        
        stage('Generar Package Deploy') {
            steps {
                script {
                    updateGitHubStatus('pending', 'Preparando package para deploy...', 'production-deploy')
                    echo "üì¶ Generando package para deploy..."

                    bat "if not exist package mkdir package"

                    try {
                        // Intentar obtener los cambios del √∫ltimo merge
                        def lastMergeCommit = bat(script: "git log --merges -1 --pretty=format:%%H", returnStdout: true).trim()
                        def parentCommits = bat(script: "git log --pretty=format:%%P -1 ${lastMergeCommit}", returnStdout: true).trim().split(' ')
                        
                        if (parentCommits.length >= 2) {
                            def fromCommit = parentCommits[0]  // Commit de main antes del merge
                            def toCommit = parentCommits[1]    // √öltimo commit de la rama mergeada
                            
                            echo "üîÑ Generando delta desde ${fromCommit} hasta ${toCommit}"
                            
                            // Verificar plugin sfdx-git-delta
                            def pluginCheck = bat(script: "${SF_CMD} plugins | findstr sfdx-git-delta", returnStatus: true)
                            
                            if (pluginCheck == 0) {
                                bat "\"${SF_CMD}\" sgd source delta --from \"${fromCommit}\" --to \"${toCommit}\" --output ."
                                echo "‚úÖ Package.xml generado con delta"
                            } else {
                                echo "‚ö†Ô∏è Plugin sfdx-git-delta no encontrado, usando package completo"
                                createBasicPackage()
                            }
                        } else {
                            echo "‚ö†Ô∏è No se pudo determinar el delta, usando package completo"
                            createBasicPackage()
                        }
                    } catch (Exception e) {
                        echo "‚ö†Ô∏è Error generando delta: ${e.getMessage()}"
                        echo "üîÑ Usando package completo como fallback"
                        createBasicPackage()
                    }

                    // Verificar que el package.xml existe
                    if (fileExists('package\\package.xml')) {
                        echo "üìÑ Contenido del package.xml:"
                        bat "type package\\package.xml"
                        echo "‚úÖ Package.xml listo para deploy"
                    } else {
                        createBasicPackage()
                        echo "‚ùå ERROR: package.xml no encontrado, usando package b√°sico"
                        updateGitHubStatus('failure', 'Package.xml no encontrado - Deploy fallido', 'production-deploy')
                    }
                }
            }
        }
        
        stage('Deploy a Producci√≥n') {
            steps {
                script {
                    updateGitHubStatus('pending', 'Ejecutando deploy en producci√≥n...', 'production-deploy')
                    echo "üöÄ Iniciando deploy a producci√≥n..."
                    
                    try {
                        if (env.DEPLOY_TYPE == 'DEPLOY_CON_TESTS') {
                            echo "üß™ Deploy con tests completos..."
                            bat "${SF_CMD} project deploy start --package package\\package.xml --target-org %SFDX_ALIAS% --wait 30 --test-level RunLocalTests"
                        } else {
                            echo "üöÄ Deploy normal (sin tests adicionales)..."
                            bat "${SF_CMD} project deploy start --manifest package\\package.xml --target-org %SFDX_ALIAS% --wait 30"
                        }
                        
                        echo "‚úÖ Deploy completado exitosamente"
                        
                    } catch (Exception e) {
                        echo "‚ùå Error en deploy: ${e.getMessage()}"
                        updateGitHubStatus('failure', 'Deploy fall√≥ en Salesforce', 'production-deploy')
                        throw e
                    }
                }
            }
        }
        
        stage('Smoke Tests Post-Deploy') {
            steps {
                script {
                    updateGitHubStatus('pending', 'Ejecutando tests post-deploy...', 'production-deploy')
                    
                    echo "üß™ Ejecutando smoke tests post-deploy..."
                    
                    try {
                        bat "${SF_CMD} data query --query \"SELECT Id, Name FROM User LIMIT 1\" --target-org %SFDX_ALIAS%"
                        
                        echo "‚úÖ Smoke tests pasaron - Org responde correctamente"
                        env.SMOKE_TESTS_PASSED = "true"
                        
                    } catch (Exception e) {
                        echo "‚ùå Smoke tests fallaron: ${e.getMessage()}"
                        env.SMOKE_TESTS_PASSED = "false"
                        updateGitHubStatus('failure', 'Smoke tests fallaron - Deploy marcado como fallido', 'production-deploy')
                        error("Smoke tests post-deploy fallaron - Deploy marcado como fallido")
                    }
                }
            }
        }
    }
    
    post {
        always {
            script {
                bat "if exist auth_url.txt del auth_url.txt"
                echo "üßπ Archivos temporales limpiados"
            }
        }
        success { 
            script {
                if (env.DEPLOY_VERIFIED == "true" && env.SMOKE_TESTS_PASSED == "true") {
                    updateGitHubStatus('success', 'Deploy completado exitosamente en producci√≥n', 'production-deploy')
                    
                    echo """
                    üéâ DEPLOY A PRODUCCI√ìN EXITOSO
"""
                    
                    currentBuild.description = "üéâ Deploy exitoso y verificado - GitHub actualizado"
                    currentBuild.result = 'SUCCESS'
                    
                } else {
                    echo "‚ùå Deploy no puede marcarse como exitoso - Verificaciones fallaron"
                    echo "Deploy Verified: ${env.DEPLOY_VERIFIED}"
                    echo "Smoke Tests: ${env.SMOKE_TESTS_PASSED}"
                    
                    updateGitHubStatus('failure', 'Deploy incompleto - Verificaciones fallaron', 'production-deploy')
                    currentBuild.result = 'FAILURE'
                    error("Deploy no puede considerarse exitoso debido a verificaciones fallidas")
                }
            }
        }
        failure { 
            script {
                updateGitHubStatus('failure', 'Deploy fall√≥ - Revisar logs de Jenkins', 'production-deploy')
                
                echo """
                üí• DEPLOY A PRODUCCI√ìN FALL√ì
"""
            }
        }
        cleanup {
            script {
                echo "üßπ Limpieza finalizada"
            }
        }
    }
}

def createBasicPackage() {
    def packageXml = '''<?xml version="1.0" encoding="UTF-8"?>
<Package xmlns="http://soap.sforce.com/2006/04/metadata">
    <types>
        <members>HSU_SistemasUpdater</members>
        <name>ApexClass</name>
    </types>
    <version>59.0</version>
</Package>'''

    writeFile file: 'package.xml', text: packageXml
    echo "‚úÖ package.xml b√°sico creado"
}

def updateGitHubStatus(state, description, context) {
    try {
        def repoUrl = scm.getUserRemoteConfigs()[0].getUrl()
        def repoName = repoUrl.tokenize('/').last().replace('.git', '')
        def repoOwner = repoUrl.tokenize('/')[-2]
        
        def commitSha = env.GIT_COMMIT
        def targetUrl = "${BUILD_URL}console"
        
        def payload = [
            state: state,
            target_url: targetUrl,
            description: description,
            context: "jenkins/${context}"
        ]
        
        def jsonPayload = groovy.json.JsonOutput.toJson(payload)
        
        def response = httpRequest(
            acceptType: 'APPLICATION_JSON',
            contentType: 'APPLICATION_JSON',
            httpMode: 'POST',
            requestBody: jsonPayload,
            url: "https://api.github.com/repos/${repoOwner}/${repoName}/statuses/${commitSha}",
            customHeaders: [
                [name: 'Authorization', value: 'token ' + GITHUB_TOKEN_PSW],
                [name: 'User-Agent', value: 'Jenkins-Pipeline']
            ]
        )
        
        echo "‚úÖ GitHub status actualizado: ${state} - ${description}"
        
    } catch (Exception e) {
        echo "‚ö†Ô∏è Error actualizando GitHub status: ${e.getMessage()}"
    }
}